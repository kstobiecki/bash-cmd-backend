    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "lib": ["ES2020"],
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
